%header
%p{ :id => "createdebt"}= link_to 'Create new debt', new_debt_path
%h1{ :id => "current" } Debts
%p#notice= notice

%ul.debts
  - @debts.each do |debt|
    %ol

      %article
        %h3= debt.debtor.name
        %p.byline= debt.date_borrowed
        %p.byline= "Amount: " + number_to_currency(debt.amount)
        %p.byline= "Description: " + debt.description

        %ul.controls
          %ol{ :class => "select"}= link_to 'Show', debt
          %ol{ :class => "select"}= link_to 'Edit', edit_debt_path(debt)
          %ol{ :class => "select"}= link_to 'Destroy', debt, method: :delete, data: { confirm: 'Are you sure?' }
